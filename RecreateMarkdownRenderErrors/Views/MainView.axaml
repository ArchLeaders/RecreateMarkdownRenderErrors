<UserControl x:Class="RecreateMarkdownRenderErrors.Views.MainView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:md="https://github.com/whistyun/Markdown.Avalonia"
             xmlns:vm="clr-namespace:RecreateMarkdownRenderErrors.ViewModels"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <StackPanel Margin="15">
        <Button Margin="0,0,0,5"
                Click="Button_Click"
                Content="Change Markdown" />
        <md:MarkdownScrollViewer Name="MarkdownViewer" Markdown="`Test`" />
    </StackPanel>
</UserControl>
